<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<title>Login</title>
        <%- include('../commons/script.ejs') %>
	</head>
	<body>
        <%- include('../commons/navbar.ejs') %>

		<div>
			<div class="d-flex justify-content-center mt-4">
				<div class="login-box mt-4 w-25">
					<%- include('../commons/alerts.ejs') %>
					<form action="/auth/login" method="post">
						<h2 class="text-center display-5 my-3">Login</h2>
                        <% if(locals.error || locals.errors){ %>
						<div class="alert alert-danger">
                            <% if(locals.errors){errors.map(error=>{ %>
                                <span class="text-danger"><%= error.msg %></span><br>
                            <% })}%>
                            <% if(locals.error){ %>
                                <span class="text-danger"><%= error %></span>
                            <% }%>
                        </div>
                        <% } %>
                        <input type="hidden" name="role" value=<%= role %>>
						<div class="form-group my-2">
							<label for="email">Enter Email</label>
							<input type="email" id="email" name="email" class="form-control" />
							<!-- <span class="text-danger">Please enter email</span> -->
						</div>
						<div class="form-group my-2">
							<label for="password">Enter Password</label>
							<input type="text" id="password" name="password" class="form-control" />
							<!-- <span class="text-danger">Please enter password</span> -->
						</div>
						<div class="my-2">
							<button type="submit" class="btn btn-primary">Login</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
